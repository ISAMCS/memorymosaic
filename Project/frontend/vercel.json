{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "npm install --legacy-peer-deps && npm run build --prefix ."
      }
    },
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/models.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/server.js" },
    { "src": "/model/(.*)", "dest": "/api/models.js" },
    { "src": "/(.*)", "dest": "/" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}