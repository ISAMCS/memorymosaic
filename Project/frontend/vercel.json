{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "npm install --legacy-peer-deps"
      }
    },
    {
      "src": "api/server.js",
      "use": "@vercel/node",
      "config": {
        "installCommand": "npm install --legacy-peer-deps"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/server.js" },
    { "src": "/model/(.*)", "dest": "api/models.js" },
    { "src": "/(.*)", "dest": "$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}